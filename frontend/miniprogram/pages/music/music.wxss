/* pages/music/music.wxss */
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 100vh;
  padding: 150rpx;
}

/* 标题栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-top: -70rpx;
}

.back-btn {
  font-size: 48rpx;
  color: #333;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.home-btn {
  font-size: 48rpx;
  color: #333;
}

/* 每一节的容器 */
.section {
  margin-bottom: 100rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 50rpx;
}

/* 最近播放和歌单推荐的图片行 */
.image-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10rpx;
}

/* 图片样式 */
.grid-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-right: 35rpx; /* 调整图片之间的间隔 */
}

.large-grid-image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 20rpx;
  margin-right: 55rpx; /* 调整图片之间的间隔 */
  margin-top: 20rpx;
}

/* 播放器控制栏 */
.player-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 10rpx 10rpx 0 0;
  box-shadow: 0 -10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.player-text {
  font-size: 32rpx;
  color: #333;
}

button {
  font-size: 32rpx;
  color: #000;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border: none;
  border-radius: 10rpx;
  cursor: pointer;
}