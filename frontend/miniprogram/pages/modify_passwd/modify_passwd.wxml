<view class="container" style="background-color: {{pageBackgroundColor}}; color: {{textColor}};">

<!-- 欢迎登录标题 -->
<view class="login-header">
  <text class="welcome-text">修改密码</text>
  <view class="underline"></view>
</view>

<!-- 手机号输入框和发送验证码按钮 -->
<view class="input-container phone-container">
  <text class="input-label">手机号</text>
  <view class="phone-input-wrapper">
    <input class="input-field phone-input" placeholder="请输入手机号" type="number" bindinput="onPhoneInput" />
    <button 
  class="send-code-button" 
  bindtap="onSendCode" 
  disabled="{{isCodeSent}}">
  {{isCodeSent ? countdown + '秒后重试' : '发送验证码'}}
</button>
  </view>
</view>

 <!-- 验证码输入框-->
  <view class="input-container">
    <text class="input-label">验证码</text>
    
      <view style="display:flex; flex-direction:row; height: auto; width: 100%;">
        <view style="flex: 2 0 auto">
            <input class="input-field" placeholder="请输入收到的验证码" type="number" bindinput="onValidationInput" />
        </view>
        <view style="flex: 0 2 auto">
            <button class="button-valid" style="width: 235rpx; display: block; box-sizing: border-box; left: 0rpx; top: 8rpx; position: relative; background-color:{{buttonBackgroundColor}}">发送验证码</button>
        </view>
      </view>
  </view>

<!-- 密码输入框 -->
<view class="input-container">
  <text class="input-label">密码</text>
  <input class="input-field" placeholder="请输入密码" type="password" bindinput="onPasswordInput"/>
</view>

<!-- 确认密码输入框 -->
<view class="input-container">
  <text class="input-label">确认密码</text>
  <input class="input-field" placeholder="请再次输入密码" type="password" bindinput="onConfirmPasswordInput"/>
</view>

<!-- 注册按钮 -->
<button class="login-button" bindtap="onRegister">修改密码</button>

</view>