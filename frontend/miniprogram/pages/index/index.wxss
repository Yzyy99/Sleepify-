/* 页面整体样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  height: 100vh;
}

/* 顶部导航栏 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
  color: #ffffff;
}

.title {
  font-size: 20px;
}

.settings {
  font-size: 16px;
  color: #cccccc;
}

/* 中心按钮 */
.center-button {
  margin-top: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sleep-button {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background: linear-gradient(135deg, #A7A8DA, #4A4A8E);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

.sleep-button text {
  font-size: 24px;
  color: #0d3068;
}

/* 功能按钮区域 */
.feature-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  width: 80%;
  margin-top: 30px;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
}

.feature-item image {
  width: 60px;
  height: 60px;
  margin-bottom: 8px;
}

.feature-item text {
  font-size: 14px;
  color:rgb(226, 224, 224);
}
