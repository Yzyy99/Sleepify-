/* 背景样式 */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* 确保背景不会遮挡内容 */
}

/* 通用样式 */
.container {
  padding: 20px;
  font-family: Arial, sans-serif;
  box-sizing: border-box;
}

/* 标题 */
.header {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

/* 表格样式 */
.table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

.row {
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.cell {
  flex: 1;
  text-align: center;
  padding: 5px;
}

.form {
  margin-top: 50px;
  padding: 10px;
  border-top: 1px solid #ccc;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.form-item label {
  width: 80px;
  color: #333;
}

input {
  flex: 1;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  margin-top: 50px;
  padding: 10px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 4px;
  text-align: center;
}