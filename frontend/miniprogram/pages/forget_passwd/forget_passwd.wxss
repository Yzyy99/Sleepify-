/* 背景为白色 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    height: 100vh; /* 占满屏幕高度 */
    padding: 20px;
  }
  
  /* 返回按钮样式 */
  .back-button {
    position: absolute;
    top: 20px;
    left: 20px;
  }
  
  .back-text {
    font-size: 16px;
  }
  
  .back-image {
    width: 30px;
    height: 30px;
  }
  
  /* 欢迎登录标题样式 */
  .login-header {
    margin-top: 80px; /* 标题距离顶部的间距 */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }
  
  .welcome-text {
    font-size: 24px;
    font-weight: bold;
  }
  
  .underline {
    width: 80px;
    height: 2px;
    margin-top: 8px;
    margin-bottom: 40px;
  }
  
  /* 输入框容器样式 */
  .input-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 30px;
  }
  
  .input-label {
    font-size: 16px;
    margin-bottom: 5px;
  }
  
  .input-field {
    border: none;
    font-size: 16px;
    padding: 10px;
    color: #333333;  /* 输入框文字颜色改为深色 */
    background-color: transparent;
  }
  
  .button-valid{
    width: 100%;
    font-size: 13px;
  }

  /* 登录按钮样式 */
  .login-button {
    width: 100%;
    height: 50px;
    background-color: #77D28E;  /* 绿色背景 */
    border-radius: 25px;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    line-height: 35px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    margin-top: 20px;
  }
