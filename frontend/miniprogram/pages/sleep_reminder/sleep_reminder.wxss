/* pages/sleep_reminder/sleep_reminder.wxss */
.container {
  min-height: 100vh;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 5px;
  position: relative;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.abandon-btn {
  padding: 5px 10px;
  font-size: 14px;
  opacity: 0.8;
}

.sleep-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0px;
  margin-top: 10px;
}

.time-record {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 30px;
  margin-top: -100px;
}

.time-item {
  margin-bottom: 15px;
}

.time-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 16px;
  margin-right: 10px;
}

.time {
  font-size: 18px;
  font-weight: bold;
  margin-right: 10px;
}

.date {
  font-size: 14px;
  opacity: 0.8;
}

.form {
  margin-bottom: 30px;
}

.form-item {
  margin-bottom: 20px;
}

.form-item label {
  display: block;
  margin-bottom: 8px;
}

.form-item input {
  width: 100%;
  padding: 8px;
  border-radius: 8px;
  background-color: rgba(255, 255, 255, 0.1);
}

.button-group {
  display: flex;
  justify-content: space-between;
  gap: 15px;
  margin-bottom: 250px;
}

.record-btn, .save-btn {
  flex: 1;
  padding: 12px 0;
  border-radius: 25px;
}

.picker-view {
  display: inline-block;
  padding: 5px 10px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 5px;
  margin-left: 10px;
}

.time-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.label {
  min-width: 80px;
}