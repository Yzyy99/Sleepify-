/* pages/homepage/homepage.wxss */
/* 页面整体布局样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* 占满整个屏幕高度 */
  background-color: #dcdee0; /* 背景蓝色 */
}

/* 图标样式 */
.logo {
  width: 100px; /* 图标宽度 */
  height: 100px; /* 图标高度 */
  margin-bottom: 40px; /* 图标下方的间距 */
}

/* 标题样式 */
.title {
  font-size: 24px;
  color: #5C68A6; /* 标题颜色 */
  margin-bottom: 50px; /* 标题下方的间距 */
}

/* 按钮样式 */
.button {
  width: 200px;
  height: 50px;
  background-color: #A6958A; /* 按钮背景色 */
  color: #FFFFFF; /* 按钮文字颜色 */
  border-radius: 30px; /* 按钮圆角 */
  text-align: center;
  line-height: 35px; /* 让文字垂直居中 */
  margin-bottom: 50px; /* 按钮之间的间距 */
  font-size: 18px;
  font-weight: bold;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25); /* 按钮阴影 */
}

/* 夜间模式开关按钮样式 */
.mode-switch {
  margin-top: 30px;
  font-size: 18px;
  color: #333; /* 默认文本颜色 */
}